{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/api/v1/users/{id}/skills": {
      "get": {
        "summary": "Retrieves all matched skills",
        "tags": [
          "Skills",
          "Users"
        ],
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "skills found",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "proficiency": {
                  "type": "integer"
                },
                "endorsements": {
                  "type": "integer"
                }
              },
              "required": [
                "id",
                "proficiency"
              ]
            }
          },
          "404": {
            "description": "skill not found"
          }
        }
      }
    },
    "/api/v1/users/{user_id}/skills": {
      "get": {
        "summary": "Query skill data",
        "tags": [
          "Skills"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Return correct information based on query",
            "schema": {
              "type": "array",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "name",
                "description"
              ]
            }
          },
          "401": {
            "description": "unauthorized"
          }
        }
      }
    },
    "/api/v1/skills": {
      "post": {
        "summary": "Creates a Skill",
        "tags": [
          "Skills"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "skill",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              },
              "required": [
                "name",
                "description"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "skill created"
          },
          "401": {
            "description": "unauthorized"
          }
        }
      }
    },
    "/api/v1/skills/{id}": {
      "delete": {
        "summary": "Deletes a skill",
        "tags": [
          "Skills"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "skill deleted"
          },
          "404": {
            "description": "skill not found"
          }
        }
      }
    },
    "/api/v1/users/{id}/tickets": {
      "get": {
        "summary": "Retrieves all tickets",
        "tags": [
          "Tickets"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "tickets found",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "text"
                },
                "status": {
                  "type": "integer"
                },
                "assignee": {
                  "type": "string"
                }
              },
              "required": [
                "id"
              ]
            }
          },
          "404": {
            "description": "skill not found"
          }
        }
      },
      "post": {
        "summary": "Creates a Ticket",
        "tags": [
          "Tickets"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "skill",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              },
              "required": [
                "name",
                "description"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "skill created"
          },
          "422": {
            "description": "invalid request"
          }
        }
      }
    },
    "/api/v1/users/{id}/tickets/{id}": {
      "get": {
        "summary": "Retrieves a ticket",
        "tags": [
          "Tickets"
        ],
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "skill_id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "ticket found",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "text"
                },
                "status": {
                  "type": "integer"
                },
                "assignee": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "title",
                "status",
                "assignee"
              ]
            }
          },
          "404": {
            "description": "skill not found"
          }
        }
      }
    },
    "/api/v1/login": {
      "post": {
        "summary": "Creates a session",
        "tags": [
          "sessions"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  }
                }
              },
              "required": [
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "session created"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/v1/logout": {
      "delete": {
        "summary": "Destroy session",
        "tags": [
          "sessions"
        ],
        "consumes": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "blacklist token"
          },
          "400": {
            "description": "no token to blacklist"
          }
        }
      }
    }
  }
}